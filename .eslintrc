{
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "no-console": 1,
    "object-curly-spacing": [2, "never"],
    "quotes": [2, "double", "avoid-escape"],
    "semi": [2,"always"],
    "space-infix-ops": 2,

    // react rules
    "react/jsx-quotes": [2, "double"],
    "react/jsx-uses-react": 2
  },
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "jsx": true
  },
  "plugins": [
    "react"
  ]
}
